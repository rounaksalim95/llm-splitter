{
  "name": "llm-splitter",
  "version": "0.1.0",
  "description": "Chrome extension to split queries across multiple LLM providers",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "package": "vite build && cd dist && zip -r ../llm-splitter.zip . && cd .."
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.0-beta.23",
    "@types/chrome": "^0.0.260",
    "@vitest/coverage-v8": "^1.2.2",
    "jsdom": "^24.0.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vitest": "^1.2.2"
  }
}
